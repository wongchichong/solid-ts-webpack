{
    "compilerOptions": {
        "target": "esnext",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": false,
        "noEmit": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "paths": {
            "solid-js/*": [
                "../solid-js/packages/solid/*"
            ],
            "solid-js": [
                "../solid-js/packages/solid"
            ],
            "@solidjs/router": [
                "../solid-router/dist"
            ],
            "@solidjs/router/*": [
                "../solid-router/dist/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}